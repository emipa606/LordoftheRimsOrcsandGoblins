<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseWeapon">
    <defName>LotR_TrollAxe</defName>
    <label>troll axe</label>
    <description>A refined club, engineered for efficient swinging and deadly impacts.</description>
    <graphicData>
      <texPath>TrollAxe/trollhammer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>2.9</drawSize>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <weaponTags>
      <li>Troll</li>
    </weaponTags>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
      <li>
        <label>head</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12.3</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
    </tools>
    <comps>
      <li>
        <compClass>CompOversizedWeapon.CompOversizedWeapon</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponMelee</nameMaker>
        <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
    <tradeability>None</tradeability>
    <destroyOnDrop>True</destroyOnDrop>
    <weaponClasses>
      <li>MeleePiercer</li>
    </weaponClasses>    
    <smeltable>true</smeltable>
    <burnableByRecipe>true</burnableByRecipe>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>
    <relicChance>1</relicChance>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>
  <ThingDef ParentName="AnimalThingBase">
    <defName>LotR_BlueTroll</defName>
    <label>olag hai</label>
    <description>Giant troll.</description>
    <statBases>
      <MoveSpeed>1.5</MoveSpeed>
      <ComfyTemperatureMin>-45</ComfyTemperatureMin>
      <MarketValue>1100</MarketValue>
    </statBases>
<tools>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>25</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>25</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>Human</body>
      <baseHungerRate>2.0</baseHungerRate>
      <baseBodySize>4.0</baseBodySize>
      <baseHealthScale>3.6</baseHealthScale>
      <foodType>Meat</foodType>
      <gestationPeriodDays>60</gestationPeriodDays>
      <wildness>0.97</wildness>
      <manhunterOnTameFailChance>1</manhunterOnTameFailChance>
      <intelligence>ToolUser</intelligence>
      <trainability>Advanced</trainability>
      <nuzzleMtbHours>120</nuzzleMtbHours>
      <lifeExpectancy>20</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>1.0</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>3.0</minAge>
          <soundWounded>Pawn_Thrumbo_Pain</soundWounded>
          <soundDeath>Pawn_Thrumbo_Death</soundDeath>
          <soundCall>Pawn_Thrumbo_Call</soundCall>
          <soundAngry>Pawn_Thrumbo_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
    </race>
  </ThingDef>
